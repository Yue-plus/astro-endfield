---
const site = Astro.site;
const Bender = site + "/fonts/JovannyLemonad-Bender.otf";
const Orbitron = site + "/fonts/Orbitron-VariableFont_wght.ttf";
const JetBrainsMono = site + "/fonts/JetBrainsMono-Regular.woff2";
---

<style is:global define:vars={{ Bender, Orbitron, JetBrainsMono }}>
  @font-face {
    font-family: "Bender";
    src: local("Bender"), url(var(--Bender)) format("oft");
  }

  @font-face {
    font-family: "Orbitron";
    src: local("Orbitron"), url(var(--Orbitron)) format("ttf");
  }

  @font-face {
    font-family: "JetBrainsMono";
    src: local("JetBrains Mono"), url(var(--JetBrainsMono)) format("woff2");
  }

  code,
  pre {
    font-family: "JetBrainsMono", Consolas, monospace;
  }
</style>
