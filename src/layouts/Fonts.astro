---
const site = Astro.site;
const Bender = `url(${site}fonts/JovannyLemonad-Bender.otf)`;
const Orbitron = `url(${site}fonts/Orbitron-VariableFont_wght.ttf)`;
const JetBrainsMono = `url(${site}fonts/JetBrainsMono-Regular.woff2)`;
---

<style is:global define:vars={{ Bender, Orbitron, JetBrainsMono }}>
  @font-face {
    font-family: "Bender";
    src: local("Bender"), var(--Bender) format("oft");
  }

  @font-face {
    font-family: "Orbitron";
    src: local("Orbitron"), var(--Orbitron) format("ttf");
  }

  @font-face {
    font-family: "JetBrains Mono";
    src: local("JetBrains Mono"), var(--JetBrainsMono) format("woff2");
  }

  code,
  pre {
    font-family: "JetBrainsMono", Consolas, monospace;
  }
</style>
