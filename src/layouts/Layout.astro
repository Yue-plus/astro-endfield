---
import config from "../../endfield.config";
import Fonts from "./Fonts.astro";
import Colors from "../components/Colors";
import Footer from "./Footer.astro";
import Header from "./Header.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
const endfieldColor = Colors.primaryEndfield;
const arknightsColor = Colors.primaryArknights;
---

<!DOCTYPE html>
<html lang={config.language} class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <Fonts />
  </head>
  <body
    class="h-full m-0 bg-no-repeat bg-fixed bg-cover bg-center flex flex-col text-white"
    style="background-image: url(/assets/img/base_bg.jpg); font-family: 'JetBrainsMono';"
  >
    <Header />
    <slot class="flex-grow" />
    <Footer />
  </body>
</html>
