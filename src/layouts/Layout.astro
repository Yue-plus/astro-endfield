---
import config from "../../endfield.config";
import Fonts from "../components/Fonts.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang={config.language} class="h-full dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <Fonts />
  </head>
  <body
    class="h-full m-0 bg-no-repeat bg-fixed bg-cover bg-center flex flex-col text-fg-lightest bg-bg-lightest dark:text-fg-darkest dark:bg-bg-darkest"
    style="background-image: url(/assets/img/base_bg.jpg); font-family: 'JetBrains Mono';"
  >
    <Header />
    <slot class="flex-grow" />
    <Footer />
  </body>
</html>
