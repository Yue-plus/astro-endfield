---
import config from "../../endfield.config";
import Fonts from "./Fonts.astro";
import Footer from "./Footer.astro";
import Header from "./Header.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html
  lang={config.language}
  class="h-full text-fg-lightest bg-bg-lightest dark:text-fg-darkest dark:bg-bg-lightest"
>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <Fonts />
  </head>
  <body
    class="dark h-full m-0 bg-no-repeat bg-fixed bg-cover bg-center flex flex-col"
    style="background-image: url(/assets/img/base_bg.jpg); font-family: 'JetBrains Mono';"
  >
    <Header />
    <slot class="flex-grow" />
    <Footer />
  </body>
</html>
